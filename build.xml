<?xml version="1.0" encoding="UTF-8"?>
<project name="java-chat-server" default="all">
  
  
  <property file="build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="../default-java/jre/lib/charsets.jar"/>
      <include name="../default-java/jre/lib/ext/cldrdata.jar"/>
      <include name="../default-java/jre/lib/ext/dnsns.jar"/>
      <include name="../default-java/jre/lib/ext/icedtea-sound.jar"/>
      <include name="../default-java/jre/lib/ext/jaccess.jar"/>
      <include name="../default-java/jre/lib/ext/localedata.jar"/>
      <include name="../default-java/jre/lib/ext/nashorn.jar"/>
      <include name="../default-java/jre/lib/ext/sunec.jar"/>
      <include name="../default-java/jre/lib/ext/sunjce_provider.jar"/>
      <include name="../default-java/jre/lib/ext/sunpkcs11.jar"/>
      <include name="../default-java/jre/lib/ext/zipfs.jar"/>
      <include name="../default-java/jre/lib/jce.jar"/>
      <include name="../default-java/jre/lib/jsse.jar"/>
      <include name="../default-java/jre/lib/management-agent.jar"/>
      <include name="../default-java/jre/lib/resources.jar"/>
      <include name="../default-java/jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module java-chat-server -->
  
  <dirname property="module.java-chat-server.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.java-chat-server" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java-chat-server" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java-chat-server" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java-chat-server" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="java-chat-server.output.dir" value="${module.java-chat-server.basedir}/out/production/java-chat-server"/>
  <property name="java-chat-server.testoutput.dir" value="${module.java-chat-server.basedir}/out/test/java-chat-server"/>
  
  <path id="java-chat-server.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java-chat-server.module.production.classpath">
    <path refid="${module.jdk.classpath.java-chat-server}"/>
  </path>
  
  <path id="java-chat-server.runtime.production.module.classpath">
    <pathelement location="${java-chat-server.output.dir}"/>
  </path>
  
  <path id="java-chat-server.module.classpath">
    <path refid="${module.jdk.classpath.java-chat-server}"/>
    <pathelement location="${java-chat-server.output.dir}"/>
  </path>
  
  <path id="java-chat-server.runtime.module.classpath">
    <pathelement location="${java-chat-server.testoutput.dir}"/>
    <pathelement location="${java-chat-server.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.java-chat-server">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java-chat-server">
    <patternset refid="excluded.from.module.java-chat-server"/>
  </patternset>
  
  <path id="java-chat-server.module.sourcepath">
    <dirset dir="${module.java-chat-server.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java-chat-server" depends="compile.module.java-chat-server.production,compile.module.java-chat-server.tests" description="Compile module java-chat-server"/>
  
  <target name="compile.module.java-chat-server.production" depends="register.custom.compilers" description="Compile module java-chat-server; production classes">
    <mkdir dir="${java-chat-server.output.dir}"/>
    <javac2 destdir="${java-chat-server.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java-chat-server}/javac">
      <compilerarg line="${compiler.args.java-chat-server}"/>
      <bootclasspath refid="java-chat-server.module.bootclasspath"/>
      <classpath refid="java-chat-server.module.production.classpath"/>
      <src refid="java-chat-server.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java-chat-server"/>
    </javac2>
    
    <copy todir="${java-chat-server.output.dir}">
      <fileset dir="${module.java-chat-server.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.java-chat-server.tests" depends="register.custom.compilers,compile.module.java-chat-server.production" description="compile module java-chat-server; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java-chat-server" description="cleanup module">
    <delete dir="${java-chat-server.output.dir}"/>
    <delete dir="${java-chat-server.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.java-chat-server" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.java-chat-server" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>